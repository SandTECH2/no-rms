generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(uuid())
  name      String
  settings  Json?    @default("{}")
  createdAt DateTime @default(now())
  users     User[]
  roles     Role[]
  customers Customer[]
  warehouses Warehouse[]
  projects  Project[]
}

model Role {
  id          String   @id @default(uuid())
  orgId       String
  name        String
  permissions Json     @default("{}")
  org         Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
}

model User {
  id               String  @id @default(uuid())
  orgId            String
  firstName        String
  middleName       String?
  lastName         String
  email            String
  phone            String?
  dob              DateTime?
  bankAccount      String?
  roleId           String?
  hourlyRate       Decimal? @db.Decimal(10,2)
  emergencyContact Json?
  address          Json?
  internalNote     String?
  archived         Boolean @default(false)
  createdAt        DateTime @default(now())

  org  Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  role Role?        @relation(fields: [roleId], references: [id], onDelete: SetNull)

  @@unique([orgId, email])
  @@index([orgId])
}

model Customer {
  id         String   @id @default(uuid())
  orgId      String
  legalName  String
  orgNumber  String?
  vatId      String?
  type       String?
  address    Json?
  email      String?
  phone      String?
  internalNote String?
  createdAt  DateTime @default(now())

  org Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  contacts Contact[]

  @@index([orgId])
}

model Contact {
  id         String   @id @default(uuid())
  customerId String
  fullName   String
  email      String?
  phone      String?
  address    Json?
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
}

model Warehouse {
  id          String @id @default(uuid())
  orgId       String
  name        String
  address     Json?
  internalNote String?
  warehouseCode String?
  shelves     WarehouseShelf[]
  packZones   PackZone[]
  org         Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
}

model WarehouseShelf {
  id          String @id @default(uuid())
  warehouseId String
  shelfId     String
  barcode     String?
  name        String?
  category    String?
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id], onDelete: Cascade)

  @@index([warehouseId])
}

model PackZone {
  id            String @id @default(uuid())
  warehouseId   String
  name          String
  internalNote  String?
  packZoneCode  String?
  warehouse     Warehouse @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
}

model EquipmentCatalog {
  id                String  @id @default(uuid())
  orgId             String
  code              String  // 5-digit string per org
  name              String
  rentalPrice       Decimal? @db.Decimal(10,2)
  salePrice         Decimal? @db.Decimal(10,2)
  quantityTotal     Int     @default(0)
  quantityAvailable Int     @default(0)
  stockType         String  // bulk | serialized
  canContain        Boolean @default(false)
  purchaseCost      Decimal? @db.Decimal(10,2)
  type              String?
  status            String?
  warehouseId       String?
  shelfId           String?
  archived          Boolean @default(false)
  createdAt         DateTime @default(now())

  org Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  serials EquipmentSerial[]

  @@index([orgId, code])
}

model EquipmentSerial {
  id            String @id @default(uuid())
  catalogId     String
  serialNumber  String
  barcode       String?
  status        String
  currentShelfId String?
  currentProjectId String?
  metadata      Json?
  createdAt     DateTime @default(now())

  catalog EquipmentCatalog @relation(fields: [catalogId], references: [id], onDelete: Cascade)

  @@index([catalogId, serialNumber])
}

model Project {
  id              String @id @default(uuid())
  orgId           String
  name            String
  projectNumber   String
  type            String?
  status          String?
  projectManagerId String?
  color           String?
  externalRef     String?
  warehouseId     String?
  packZoneId      String?
  sharedOrgIds    String[]  @db.VarChar[] // simplified
  planningStart   DateTime?
  planningEnd     DateTime?
  usageStart      DateTime?
  usageEnd        DateTime?
  createdAt       DateTime @default(now())

  org Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  equipment ProjectEquipment[]
  tasks    ProjectTask[]

  @@index([orgId, projectNumber])
}

model ProjectEquipment {
  id         String @id @default(uuid())
  projectId  String
  catalogId  String
  serialId   String?
  quantity   Int
  isTemp     Boolean @default(false)
  tempItemId String?

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  catalog EquipmentCatalog @relation(fields: [catalogId], references: [id], onDelete: Cascade)
}

model ProjectTask {
  id             String @id @default(uuid())
  projectId      String
  title          String
  description    String?
  assignedUserId String?
  status         String?
  notes          String?
  createdAt      DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model AuthUser {
  id        String   @id @default(uuid())
  userId    String?  // optional link to User
  email     String   @unique
  password  String
  orgId     String?
  createdAt DateTime @default(now())
}