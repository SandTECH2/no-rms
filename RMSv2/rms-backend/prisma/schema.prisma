generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        Int       @id @default(autoincrement())
  name      String
  createdAt DateTime  @default(now())
  warehouses Warehouse[]
  projects   Project[]
  customers  Customer[]
}

model Warehouse {
  id          Int       @id @default(autoincrement())
  name        String
  address     String?
  internalNote String?
  organization  Organization @relation(fields: [organizationId], references: [id])
  organizationId Int
  shelves     Shelf[]
  packZones   PackZone[]
}

model Shelf {
  id       Int    @id @default(autoincrement())
  shelfId  String @unique
  barcode  String?
  name     String?
  category String?
  warehouse Warehouse @relation(fields: [warehouseId], references: [id])
  warehouseId Int
}

model PackZone {
  id         Int      @id @default(autoincrement())
  packZoneId String   @unique
  name       String
  internalNote String?
  warehouse  Warehouse @relation(fields: [warehouseId], references: [id])
  warehouseId Int
}

model Equipment {
  id               Int       @id @default(autoincrement())
  code             String    @unique
  name             String
  quantity         Int       @default(0)
  available        Int       @default(0)
  pricePer         Float?
  serialized       Boolean   @default(false)
  purchaseCost     Float?
  warehouse        Warehouse? @relation(fields: [warehouseId], references: [id])
  warehouseId      Int?
  serialItems      SerialItem[]
  archived         Boolean   @default(false)
  createdAt        DateTime  @default(now())
}

model SerialItem {
  id            Int       @id @default(autoincrement())
  serialNumber  String    @unique
  status        String    @default("Available") // In use, Maintenance, Lost
  equipment     Equipment @relation(fields: [equipmentId], references: [id])
  equipmentId   Int
  shelf         Shelf?    @relation(fields: [shelfId], references: [id])
  shelfId       Int?
}

model Customer {
  id           Int      @id @default(autoincrement())
  legalName    String
  orgNumber    String?
  vatId        String?
  type         String?
  address      String?
  email        String?
  phone        String?
  internalNote String?
  contacts     ContactPerson[]
  organization Organization? @relation(fields: [organizationId], references: [id])
  organizationId Int?
  projects     Project[]
}

model ContactPerson {
  id        Int    @id @default(autoincrement())
  fullName  String
  email     String?
  phone     String?
  address   String?
  customer  Customer @relation(fields: [customerId], references: [id])
  customerId Int
}

model CrewMember {
  id          Int    @id @default(autoincrement())
  firstName   String
  middleName  String?
  lastName    String
  dob         DateTime?
  bankAccount String?
  role        String
  phone       String?
  emergencyContact String?
  email       String?
  address     String?
  internalNote String?
  hourlyRate  Float?
  organization Organization? @relation(fields: [organizationId], references: [id])
  organizationId Int?
}

model Project {
  id             Int      @id @default(autoincrement())
  name           String
  type           String
  status         String
  numberInDb     String   @unique
  color          String?
  externalRef    String?
  warehouse      Warehouse? @relation(fields: [warehouseId], references: [id])
  warehouseId    Int?
  packZone       PackZone? @relation(fields: [packZoneId], references: [id])
  packZoneId     Int?
  sharedOrgs     Int[]    @default([])
  client         Customer? @relation(fields: [clientId], references: [id])
  clientId       Int?
  projectManager String?
  tasks          Task[]
  equipments     ProjectEquipment[]
  timePlannings  TimePlanning[]
  createdAt      DateTime @default(now())
}

model ProjectEquipment {
  id         Int @id @default(autoincrement())
  project    Project @relation(fields: [projectId], references: [id])
  projectId  Int
  equipment  Equipment @relation(fields: [equipmentId], references: [id])
  equipmentId Int
  quantity   Int @default(1)
}

model Task {
  id        Int    @id @default(autoincrement())
  title     String
  notes     String?
  assignedTo Int?
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
}

model TimePlanning {
  id        Int @id @default(autoincrement())
  planningStart DateTime?
  planningEnd   DateTime?
  usageStart    DateTime?
  usageEnd      DateTime?
  project       Project @relation(fields: [projectId], references: [id])
  projectId     Int
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  name      String?
  password  String
  role      String  @default("user")
  organization Organization? @relation(fields: [organizationId], references: [id])
  organizationId Int?
}
